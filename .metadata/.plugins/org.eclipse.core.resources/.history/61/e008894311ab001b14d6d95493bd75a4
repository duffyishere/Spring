<mapper namespace="org.duffy.mapper.BoardMapper">

	<sql id="criteria">
		<trim prefix="(" suffix=") and">
			<foreach collection="typeArr" item="type" separator="or">
				<if test="type == 'T'.toString()">
					title like '%'||#{keyWord}||'%'
				</if>
				<if test="type == 'C'.toString()">
					context like '%'||#{keyWord}||'%'
				</if>
				<if test="type == 'W'.toString()">
					writer like '%'||#{keyWord}||'%'
				</if>
			</foreach>
		</trim>
	</sql>

	<select id="getList" resultType="org.duffy.domain.BoardVO">
	<![CDATA[
		select * from tbl_board where bno>0 and ROWNUM>0 and ROWNUM <= 20 order by bno DESC
	]]>
	</select>

	<select id="getListWithPaging"
		resultType="org.duffy.domain.BoardVO">
	<![CDATA[
		select bno, title, writer, regdate, updatedate, replyCnt
		from (
    		select /*+ index_desc(tbl_board pk_board) */ ROWNUM as rn, bno, title, writer, regdate, updatedate, replyCnt
    		from tbl_board
    		where 	
    ]]>

		<include refid="criteria"></include>
    		
    <![CDATA[
    		bno>0 and ROWNUM>0 and ROWNUM<=#{pageNum} * #{amount})
    		tbl_board
		where rn>(#{pageNum} -1) * #{amount}
	]]>
	</select>

	<insert id="insert">
		insert into tbl_board (bno, title, context, writer) values
		(seq_board.nextval, #{title}, #{context}, #{writer})
	</insert>

	<insert id="insertSelectKey">
		<selectKey keyProperty="bno" order="BEFORE"
			resultType="long">
			select seq_board.nextval from dual
		</selectKey>
		insert into tbl_board (bno, title, context, writer) values (#{bno},
		#{title}, #{context}, #{writer})
	</insert>

	<select id="read" resultType="org.duffy.domain.BoardVO">
		select * from tbl_board where bno = #{bno}
	</select>

	<delete id="delete">
		delete from tbl_board where bno = #{bno}
	</delete>

	<update id="update">
		update tbl_board
		set title=#{title},
		context=#{context},
		updateDate=sysdate
		where bno = #{bno}
	</update>

	<select id="getTotalCount" resultType="int">
	<![CDATA[
	select count(*) from tbl_board where]]>

		<include refid="criteria"></include>
	
	<![CDATA[
	 bno>0
	]]>
	</select>

	<select id="searchTest" resultType="org.duffy.domain.BoardVO">
	<![CDATA[
	select * from tbl_board where
	]]>

		<trim prefix="(" suffix=") and">
			<foreach collection="map" index="key" item="val"
				separator="or">
				<if test="key == 'T'.toString() ">
					title like '%'||#{val}||'%'
				</if>
				<if test="key == 'C'.toString() ">
					context like '%'||#{val}||'%'
				</if>
				<if test="key == 'W'.toString() ">
					writer like '%'||#{val}||'%'
				</if>
			</foreach>
		</trim>
	
	<![CDATA[
	rownum<=10
	]]>
	</select>

	<update id="updateReplyCnt">
		update tbl_board set replyCnt = replyCnt + #{amount} where bno = #{bno}
	</update>

